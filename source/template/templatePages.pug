block variables

doctype html
html
	head
		meta(charset="utf-8")
		title= title
		meta(content="WebR" name="author")
		meta(content=`${description}` name="description")
		meta(content=`${keywords}` name="keywords")
		meta(content="width=device-width, initial-scale=1" name="viewport")
		meta(content="ie=edge" http-equiv="x-ua-compatible")
		//- favicon block start
		link(rel="icon" href="assets/img/favicon.png" type="image/x-icon")
		link(rel="shortcut icon" href="assets/img/favicon.png" type="image/x-icon")
		//- favicon block end
		link(rel='stylesheet' href='assets/css/foundation.css')
		link(rel='stylesheet' href='assets/css/app.css')
		script(src='assets/js/foundation.js' defer)
		script(src='assets/js/app.js' defer)
		<!--[if lt IE 9]>
		script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
		<![endif]-->
	// Yandex.Metrika counter
	body
		script(type='text/javascript').
					(function (d, w, c) {
					(w[c] = w[c] || []).push(function() {
					try {
					w.yaCounter47504362 = new Ya.Metrika2({
					id:47504362,
					clickmap:true,
					trackLinks:true,
					accurateTrackBounce:true,
					webvisor:true
					});
					} catch(e) { }
					});
					var n = d.getElementsByTagName("script")[0],
					s = d.createElement("script"),
					f = function () { n.parentNode.insertBefore(s, n); };
					s.type = "text/javascript";
					s.async = true;
					s.src = "https://mc.yandex.ru/metrika/tag.js";
					if (w.opera == "[object Opera]") {
					d.addEventListener("DOMContentLoaded", f, false);
					} else { f(); }
					})(document, window, "yandex_metrika_callbacks2");
		noscript
			div
				img(src='https://mc.yandex.ru/watch/47504362', style='position:absolute; left:-9999px;', alt='')

		.wrapper
			.left-block
				.left-block__logo
					a(href="./").logo.left__logo
						.logo__img.left-block__img
							img(src="assets/img/logo.png")
				.menu.left-block__menu
					ul.menu__list
						- for(var i = 0; i < menu.text.length; i++)
							li.menu__item
								a(href=`${menu.link[i]}`).menu__link.left__menu__item.contact-block
									.contact__icon
										svg.contact__svg
											use(xlink:href=`assets/img/sprite.svg#${menu.svg[i]}`)
									.contact__text= menu.text[i]
					a(href="./").left-block__out
			.main
				.main__header
					.main__title
						.three
							div(class="hamburger" id="hamburger-10")
								span(class="line")
								span(class="line")
								span(class="line")
						h2.title
							block titles
					.main__info
						a(href=`${button.order.linkFrom}`).button.button_blue_border.main__info__button= button.order.text2
						.main__info__desc
							.contact-block.contact-block_main
								.contact__icon
									svg.contact__svg
										use(xlink:href=`assets/img/sprite.svg#${svgId.where}`)
								.contact__text= contacts.address
							.contact-block.contact-block_main
								.contact__icon
									svg.contact__svg
										use(xlink:href=`assets/img/sprite.svg#${svgId.phone}`)
								.contact__text= contacts.phone
				.main__body
					h2.main__body__title
						block mainTitle
					.main__body__desc
						block mainDesc
			block order-block

